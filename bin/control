#!/bin/bash

STOPTIMEOUT=10
FMT="%a %b %d %Y %H:%M:%S GMT%z (%Z)"

function is_cdk_service_running() {
    if [ -f $OPENSHIFT_CDK_DIR/pid/cdk.pid ]; then
        cdk_pid=$( cat $OPENSHIFT_CDK_DIR/pid/cdk.pid 2> /dev/null )
        if `ps --pid $cdk_pid 2>&1`; then
            return 0
        fi
    fi

    return 1
}

function status() {
    if [ is_cdk_service_running ]; then
        client_result "Application is running"
    else
        client_result "Application is not running"
    fi
}


function start() {
    logf="$OPENSHIFT_CDK_DIR/logs/cdk.log"
    pushd "$OPENSHIFT_REPO_DIR" > /dev/null
    {
        echo "`date +"$FMT"`: Starting application '$OPENSHIFT_APP_NAME'..."

        bundle install --path $OPENSHIFT_DATA_DIR/gems --gemfile $OPENSHIFT_CDK_DIR/lib/Gemfile
        ret=$?
        if [ $ret -neq 0 ]; then
            echo "Unable to bundle install, cannot start CDK"
            exit $ret
        fi

        nohup "BUNDLE_GEMFILE=$OPENSHIFT_CDK_DIR/lib/Gemfile bundle exec puma --bind tcp://$OPENSHIFT_CDK_IP --port $OPENSHIFT_CDK_PORT $OPENSHIFT_CDK_DIR/lib/config.ru" >> $logf 2>&1 &

        ret=$?
        npid=$!
        if [ $ret -eq 0 ]; then
            echo "$npid" > "$OPENSHIFT_CDK_DIR/pid/cdk.pid"
        else
            echo "Application '$OPENSHIFT_APP_NAME' failed to start - $ret" 1>&2
            exit $ret
        fi
    } >> $logf
}

function stop() {
    if [ -f $OPENSHIFT_CDK_DIR/pid/cdk.pid ]; then
        cdk_pid=$( cat $OPENSHIFT_CDK_DIR/pid/cdk.pid 2> /dev/null )
    fi

    if [ -n "$cdk_pid" ]; then
        logf="$OPENSHIFT_CDK_DIR/logs/cdk.log"
        echo "`date +"$FMT"`: Stopping application '$OPENSHIFT_APP_NAME' ..." >> $logf
        /bin/kill $cdk_pid
        ret=$?
        if [ $ret -eq 0 ]; then
            TIMEOUT="$STOPTIMEOUT"
            while [ $TIMEOUT -gt 0 ] && is_cdk_service_running ; do
                /bin/kill -0 "$cdk_pid" >/dev/null 2>&1 || break
                sleep 1
                let TIMEOUT=${TIMEOUT}-1
            done
        fi

        echo "`date +"$FMT"`: Stopped application '$OPENSHIFT_APP_NAME'" >> $logf
        rm -f $OPENSHIFT_CDK_DIR/pid/cdk.pid
    else
        echo "Warning: Application '$OPENSHIFT_APP_NAME' server exists without a pid file.  Use force-stop to kill." 1>&2
    fi
}

function restart() {
    if [ -f $OPENSHIFT_CDK_DIR/pid/cdk.pid ]; then
        cdk_pid=$( cat $OPENSHIFT_CDK_DIR/pid/cdk.pid 2> /dev/null )
        /bin/kill -USR2 "$cdk_pid"
    fi
}

function build() {
    echo
}

function post-deploy() {
    echo
}

function pre-build() {
    echo
}

function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_CDK_DIR/logs"
  shopt -s dotglob
  rm -rf $OPENSHIFT_CDK_DIR/logs/*
  rm -rf $OPENSHIFT_CDK_DIR/tmp/*
}

#
#  main():
#

# Ensure arguments.
if ! [ $# -eq 1 ]; then
    echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status]"
    exit 1
fi

# Source utility functions.
source $OPENSHIFT_CARTRIDGE_SDK_BASH

# Handle commands.
case "$1" in
    start)               start       ;;
    restart|graceful)    restart     ;;
    graceful-stop|stop)  stop        ;;
    status)              status      ;;
    build)               build       ;;
    pre-build)           pre-build   ;;
    post-deploy)         post-deploy ;;
    tidy)                tidy        ;;
    *) exit 0;
esac

